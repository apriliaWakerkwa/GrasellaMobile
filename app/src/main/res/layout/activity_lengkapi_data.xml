<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mobile">

    <!-- Judul Halaman -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_2"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="18dp">

        <LinearLayout
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/data_diri" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_black"
                android:gravity="center"
                android:letterSpacing="0.1"
                android:padding="16dp"
                android:text="Lengkapi Data Diri"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nama -->
            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_input"
                android:hint="Nama"
                android:fontFamily="@font/lato"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.1"
                android:padding="15dp"
                android:textColorHint="#FFFFFF"
                android:textCursorDrawable="@drawable/cursor_input"
                tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields" />

            <!-- Jenis Kelamin -->
            <RadioGroup
                android:id="@+id/radioGroupGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:padding="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0.1"
                    android:text="Laki-laki"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:letterSpacing="0.1"
                    android:textSize="18sp"
                    android:text="Perempuan"
                    android:textColor="#FFFFFF"
                    tools:ignore="HardcodedText,TouchTargetSizeCheck" />
            </RadioGroup>

            <!-- Tanggal Lahir -->
            <EditText
                android:id="@+id/etTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_input"
                android:fontFamily="@font/lato"
                android:letterSpacing="0.1"
                android:hint="Tanggal Lahir"
                android:inputType="none"
                android:clickable="true"
                android:focusable="false"
                android:padding="15dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                tools:ignore="Autofill,HardcodedText,TextContrastCheck" />


            <!-- Alamat -->
            <EditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_input"
                android:fontFamily="@font/lato"
                android:hint="Alamat"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.1"
                android:padding="15dp"
                android:textColorHint="#FFFFFF"
                tools:ignore="Autofill,HardcodedText,TextContrastCheck,TextFields" />

            <!-- Nomor Telepon -->
            <EditText
                android:id="@+id/etNomorTelepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_input"
                android:fontFamily="@font/lato"
                android:textColor="#FFFFFF"
                android:hint="Nomor Telepon"
                android:inputType="phone"
                android:maxLength="13"
                android:letterSpacing="0.1"
                android:padding="15dp"
                android:textColorHint="#FFFFFF"
                tools:ignore="Autofill,HardcodedText,TextContrastCheck" />

            <!-- Tombol Simpan -->
            <Button
                android:id="@+id/btnSimpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn"
                android:letterSpacing="0.2"
                android:text="Simpan"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                tools:ignore="HardcodedText,TextContrastCheck" />
        </LinearLayout>
    </LinearLayout>

    <!-- Formulir Lengkapi Data Diri -->

</RelativeLayout>
